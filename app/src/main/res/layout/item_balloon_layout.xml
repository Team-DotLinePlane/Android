<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingHorizontal="20dp"
    android:paddingVertical="10dp"
    android:layout_marginBottom="70dp"
    android:layout_marginHorizontal="50dp"
    android:background="@drawable/round_square_16dp">

    <TextView
        android:id="@+id/place_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="한돈 스파이크 상암점"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/category_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="양식 / 돈까스"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/place_name_tv"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/phone_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="010 / 2032 / 2310"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/category_tv"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="12sp" />


    <ImageView
        android:id="@+id/phone_iv"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/ic_phone"
        android:backgroundTint="@color/main"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/phone_tv"
        app:layout_constraintEnd_toStartOf="@+id/map_iv"
        app:layout_constraintBottom_toBottomOf="parent" />

    <ImageView
        android:id="@+id/map_iv"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/ic_map"
        android:backgroundTint="@color/main"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>


